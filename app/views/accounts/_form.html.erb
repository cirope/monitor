<%= simple_form_for @account do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :name, input_html: { autofocus: true } %>
      </div>
      <div class="col-md-6">
        <%= f.input :tenant_name, input_html: { disabled: @account.persisted? } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :style, collection: account_styles, prompt: true %>
      </div>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-6">
            <%= f.input :token_interval, as: :integer %>
          </div>
          <div class="col-md-6">
            <%= f.input :token_frequency, collection: token_frequencies, prompt: false %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-6">
            <%= f.input :cleanup_runs_after, as: :integer %>
          </div>
          <div class="col-md-6">
            <%= f.input :cleanup_executions_after, as: :integer %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="row mt-4">
          <div class="col-md-6">
            <%= f.input :group_issues_by_schedule, as: :boolean %>
          </div>
          <div class="col-md-6">
            <%= f.input :debug_mode %>
          </div>
        </div>
      </div>
    </div>
    <%= f.input :lock_version, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
