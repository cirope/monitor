<fieldset class="comment">
  <div class="row">
    <div class="col-lg-10 col-md-9">
      <%= f.input :text, label: false, placeholder: t('.text_placeholder'), input_html: { rows: 4 } %>
      <%= f.input :issue_id, as: :hidden %>
    </div>
    <% unless request.xhr? %>
      <div class="col-lg-2 col-md-3">
        <%= f.input :attachment, as: :hidden, input_html: { value: f.object.attachment.signed_id } if f.object.attachment.attached? %>
        <%= f.input :attachment, label: false, hint: comment_file_identifier(f) %>
      </div>
    <% end %>
  </div>
</fieldset>
