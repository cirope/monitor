<%= simple_form_for @comment, comment_form_options do |f| %>
  <%= f.error_notification %>

  <fieldset class="mb-3">
    <%= render 'comments/comment', f: f %>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn-sm btn-secondary' %>
      <% if @comment.persisted? %>
        <%= link_to t('cancel'), @comment, data: { remote: request.xhr? } %>
      <% end %>
    </div>
  </fieldset>
<% end %>
