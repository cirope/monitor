<div class="card mb-3">
  <div class="card-header">
    <% if filters? %>
      <p class="text-warning mb-0 float-end">
        <%= icon 'fas', 'filter' %>
        <%= link_to databases_path, title: t('cancel') do %>
          <%= icon 'fas', 'times-circle' %>
        <% end %>
      </p>
    <% end %>

    <a class="dropdown-toggle text-reset text-decoration-none d-block" href="#filters" data-bs-toggle="collapse">
      <%= icon 'fas', 'search' %>
      <%= t 'filters.title' %>
    </a>
  </div>
  <div id="filters" class="card-body collapse">
    <%= simple_form_for :filter, method: :get do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-lg-4">
            <%= f.input :name,
              required: false,
              input_html: {
                value:     filter_params[:name],
                class:     'form-control-sm',
                autofocus: true
              }
            %>
          </div>
          <div class="col-lg-4">
            <%= f.input :driver,
              required: false,
              input_html: {
                value:     filter_params[:driver],
                class:     'form-control-sm'
              }
            %>
          </div>
          <div class="col-lg-4 pt-4">
            <p class="text-end mb-0">
              <%= f.button :submit, t('filters.submit'), class: 'btn-sm btn-secondary' %>
              <%= link_to t('cancel'), databases_path, class: 'small' %>
            </p>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
