<fieldset class="description">
  <div class="row">
    <div class="col-sm-4">
      <%= f.input :name, as: :slim %>
    </div>
    <div class="col-sm-4">
      <%= f.input :value, as: :slim %>
    </div>
    <div class="col-sm-3">
      <%= f.input :public %>
    </div>
    <div class="col-sm-1">
      <div class="row-controls text-end mb-3 mb-sm-0 mt-n4 mt-sm-n2">
        <%= f.input :id, as: :hidden %>
        <%= link_to_remove_nested_item f %>
      </div>
    </div>
  </div>
</fieldset>
