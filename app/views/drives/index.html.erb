<% if @drives.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <div class="card">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= Drive.human_attribute_name 'name' %></th>
          <th><%= Drive.human_attribute_name 'provider' %></th>
          <th colspan="<%= current_user.supervisor? ? 1 : 3 %>">
            <%= link_to_new new_drive_path, class: 'btn btn-secondary btn-sm py-0 mr-n2 float-end' unless current_user.supervisor? %>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @drives.each do |drive| %>
          <tr>
            <td><%= drive.name %></td>
            <td><%= i18n_provider drive.provider %></td>
            <td class="text-end"><%= link_to_show drive %></td>
            <% unless current_user.supervisor? %>
              <td class="text-end"><%= link_to_edit [:edit, drive] %></td>
              <td class="text-end"><%= link_to_destroy drive %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @drives %>
<% end %>

<% if !current_user.supervisor? %>
  <%= link_to_new new_drive_path, class: 'btn btn-primary' %>
<% end %>
