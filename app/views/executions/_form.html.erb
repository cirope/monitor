<%= simple_form_for [@script, @execution] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :server, as: :autocomplete, url: servers_path, input_html: {
          data: { empty_result_label: t('schedules.server.empty') }
        } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
