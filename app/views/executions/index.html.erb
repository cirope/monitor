<% if @executions.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Execution.human_attribute_name 'script_id' %></th>
        <th><%= Execution.human_attribute_name 'server_id' %></th>
        <th><%= Execution.human_attribute_name 'status' %></th>
        <th><%= Execution.human_attribute_name 'started_at' %></th>
        <th><%= Execution.human_attribute_name 'ended_at' %></th>
        <th><%= Execution.human_attribute_name 'output' %></th>
        <th colspan="3">
          <%= link_to_new new_execution_path, class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @executions.each do |execution| %>
        <tr>
          <td><%= execution.script_id %></td>
          <td><%= execution.server_id %></td>
          <td><%= execution.status %></td>
          <td><%= execution.started_at %></td>
          <td><%= execution.ended_at %></td>
          <td><%= execution.output %></td>
          <td><%= link_to_show execution %></td>
          <td><%= link_to_edit [:edit, execution] %></td>
          <td><%= link_to_destroy execution %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @executions %>
<% end %>

<%= link_to_new new_execution_path, class: 'btn btn-primary' %>
