<div class="card border border-success my-3">
  <div class="card-header">
    <h5><%= t '.link' %></h5>
  </div>

  <div class="card-body">
    <p class="mb-1">
      <strong><%= t '.url' %></strong>
      <span class="d-block" data-api-url><%= @url %></span>
    </p>
    <p class="mb-1">
      <strong><%= t '.header' %></strong>
      <span class="d-block" data-api-header>Authorization</span>
    </p>
    <p class="mb-1">
      <strong><%= t '.token' %></strong>
      <span class="d-block" data-api-token><%= @token %></span>
    </p>
  </div>

  <div class="card-footer">
    <div class="btn-group">
      <button type="button" class="btn btn-outline-secondary" data-copy-target="[data-api-url]" disabled>
        <%= t '.copy_url' %>
      </button>
      <button type="button" class="btn btn-outline-secondary" data-copy-target="[data-api-header]" disabled>
        <%= t '.copy_header' %>
      </button>
      <button type="button" class="btn btn-outline-secondary" data-copy-target="[data-api-token]" disabled>
        <%= t '.copy_token' %>
      </button>
    </div>
  </div>
</div>
