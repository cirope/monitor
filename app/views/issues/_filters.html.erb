<div class="panel panel-default">
  <div class="panel-heading">
    <% if filters? %>
      <p class="text-warning pull-right">
        <span class="glyphicon glyphicon-filter"></span>
        <%= link_to issue_index_path, title: t('cancel') do %>
          <span class="glyphicon glyphicon-remove-circle"></span>
        <% end %>
      </p>
    <% end %>
    <h4 class="panel-title">
      <a href="#filters" data-toggle="collapse">
        <span class="glyphicon glyphicon-search"></span>
        <%= t 'filters.title' %>
        <span class="caret"></span>
      </a>
    </h4>
  </div>
  <div id="filters" class="panel-body collapse">
    <%= simple_form_for :filter, method: :get do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-lg-4">
            <%= f.input :description,
              required: false,
              input_html: {
                value:     filter_params[:description],
                class:     'input-sm',
                autofocus: true
              }
            %>
          </div>
          <div class="col-lg-4">
            <%= f.input :tags,
              required: false, as: :autocomplete, url: tags_path(kind: 'issue'),
              input_html: {
                value: filter_params[:tags],
                class: 'input-sm',
                data:  { empty_result_label: t('filters.tags.empty') }
              }
            %>
          </div>
          <div class="col-lg-4">
            <%= f.input :status, required: false,
              collection: filter_status, include_blank: '-', selected: filter_params[:status],
              input_html: {
                class: 'input-sm'
              }
            %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4">
            <%= f.input :created_at, as: :date_picker, required: false,
              input_html: {
                value: filter_params[:created_at],
                class: 'input-sm',
                data:  { date_range: true }
              }
            %>
          </div>
          <div class="col-lg-4">
            <%= f.input :data,
              required: false,
              input_html: {
                value: filter_params[:data],
                class: 'input-sm'
              }
            %>
          </div>
          <div class="col-lg-4">
            <% if current_user.author? || current_user.supervisor? %>
              <%= f.input :show,
                required: false,
                collection: owner_options,
                include_blank: false,
                input_html: {
                  value: filter_params[:show],
                  class: 'input-sm'
                }
              %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 col-lg-offset-8 bottom">
            <p class="text-right">
              <%= f.button :submit, t('filters.submit'), class: 'btn-sm btn-default' %>
              <%= link_to t('cancel'), issue_index_path, class: 'small' %>
            </p>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
