<% @issue ||= issue %>

+function () {
  var $container = $('[data-comment-id="<%= @comment.id %>"]')

  <% if @comment.errors.empty? %>
    $container.replaceWith(
      '<%= j render('issues/comments/show', format: :html, comment: @comment) %>'
    )
  <% else %>
    $container.replaceWith(
      '<%= j render('issues/comments/form', format: :html) %>'
    )
  <% end %>
}()
