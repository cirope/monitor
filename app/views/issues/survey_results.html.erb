<div class="card">
  <div class="card-header">
    <h5>
      <%= @survey.issue %>
      <span class="float-right" data-status>
        <%= issue_status @survey.issue %>
      </span>
    </h5>
  </div>

  <div class="card-body">
    <% @survey.questions.each do |question| %>
      <%= render "issues/survey_results/#{question.results_partial}", question: question %>
    <% end %>
  </div>
</div>

<%= link_to t('back'), issue_path(@survey.issue) %>
