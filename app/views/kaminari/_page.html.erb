<% if page.current? %>
  <li class="page-item active d-none d-md-inline">
    <%= content_tag :a, page, data: { remote: remote }, class: 'page-link', rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)) %>
  </li>
<% else %>
  <li class="page-item d-none d-md-inline">
    <%= link_to page, url, data: { remote: remote }, class: 'page-link', rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)) %>
  </li>
<% end %>
