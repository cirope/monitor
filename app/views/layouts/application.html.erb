<!doctype html>
<html lang="<%= locale %>">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="turbolinks-cache-control" content="no-cache">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <%= stylesheet_link_tag    'application', data: { turbolinks_track: 'reload' }, media: 'all' %>
  <%= javascript_include_tag 'application', data: { turbolinks_track: 'reload' } %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag 'application-ie', data: { turbolinks_track: 'reload' } %>
  <![endif]-->
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body class="pt-4 mb-4">
  <div class="alert alert-warning fixed-top mx-auto mt-1 text-center border-0 p-2 loading-caption" hidden>
    <p class="mb-0">
      <strong><%= t 'navigation.loading' %></strong>
    </p>
  </div>
  <div class="container mt-4">
    <%= render 'shared/menu' %>
    <%= render 'shared/flash' if flash_message %>
    <%= yield %>

    <%= render 'shared/help_modal' %>
  </div>
</body>
</html>
