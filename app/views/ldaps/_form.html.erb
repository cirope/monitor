<%= simple_form_for @ldap do |f| %>
  <% if @ldap.errors.include? :base %>
    <div class="alert alert-danger">
      <%= @ldap.errors.full_messages_for(:base).join '; ' %>
    </div>
  <% else %>
    <%= f.error_notification %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :lock_version, as: :hidden %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :hostname, input_html: { autofocus: true } %>
        <%= f.input :port %>
        <%= f.input :basedn %>
        <%= f.input :filter %>
        <%= f.input :login_mask %>
        <%= f.input :role_guest %>
        <%= f.input :role_manager %>
        <%= f.input :role_supervisor %>
        <%= f.input :test_user %>
      </div>
      <div class="col-md-6">
        <%= f.input :username_attribute %>
        <%= f.input :name_attribute %>
        <%= f.input :lastname_attribute %>
        <%= f.input :email_attribute %>
        <%= f.input :roles_attribute %>
        <%= f.input :role_owner %>
        <%= f.input :role_author %>
        <%= f.input :role_security %>
        <%= f.input :test_password %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
