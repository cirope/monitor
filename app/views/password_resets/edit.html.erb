<div class="row justify-content-center mt-md-5">
  <div class="col col-lg-4 col-md-6 col-sm-10">
    <div class="card">
      <div class="card-header py-md-4 text-center bg-primary">
        <%= image_tag 'logo.svg', alt: app_name %>
      </div>
      <div class="card-body p-md-4">
        <div class="text-center w-75 m-auto">
          <h4 class="text-dark-50 text-center mt-0 font-weight-bold">
            <%= @title %>
          </h4>
          <p class="text-muted mb-4">
            <%= t '.subtitle' %>
          </p>
        </div>
        <%= simple_form_for @user, url: password_reset_path(params[:id]) do |f| %>
          <%= f.input :password, input_html: { autofocus: true } %>
          <%= f.input :password_confirmation %>

          <div class="form-actions text-center">
            <%= f.button :submit, t('.update'), class: 'btn-primary px-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
