<div class="row justify-content-center">
  <div class="col col-lg-4 col-md-6 col-sm-10">
    <div class="card bg-light">
      <div class="card-body">
        <%= form_tag password_resets_path, novalidate: 'novalidate' do %>
          <div class="form-group">
            <%= label_tag :email, t('.email') %>
            <%= email_field_tag :email, params[:email], class: 'form-control', autofocus: true %>
          </div>

          <div class="form-actions text-center">
            <%= submit_tag t('.send_instructions'), class: 'btn btn-dark px-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col col-lg-4 col-md-6 col-sm-10 text-center">
    <p class="mt-3"><%= link_to t('.back'), root_path %></p>
  </div>
</div>
