<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t '.pid' %></th>
      <th><%= t '.cpu' %></th>
      <th><%= t '.memory' %></th>
      <th><%= t '.memory_percent' %></th>
      <th><%= t '.time' %></th>
      <th><%= t '.command' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @processes.sort_by(&:memory_percent).reverse.each do |process| %>
      <tr>
        <td><%= process.pid %></td>
        <td><%= process.cpu %>%</td>
        <td><%= number_to_human_size process.memory, precision: 0 %></td>
        <td><%= process.memory_percent %>%</td>
        <td><%= distance_of_time_in_words process.time %></td>
        <td><%= process.command %></td>
        <td><%= link_to_destroy process_path(process.pid) if current_user.supervisor? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
