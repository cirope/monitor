<div class="card">
  <div class="card-header">
    <h3 class="clearfix">
      <%= @record_class.model_name.human %>
    </h3>
  </div>

  <div class="card-body">
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'created_at'  %></strong>:
      <%= l @record.created_at, format: :compact %>
    </p>
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'user' %></strong>:
      <%= record_user_name @record %>
    </p>
    <p class="mb-1">
      <table class="table table-striped mt-3">
        <thead>
          <tr>
            <th><%= t '.key' %></th>
            <th><%= t '.value' %></th>
          </tr>
        </thead>
        <tbody>
          <% record_human_data_names(@record).each do |key, value| %>
            <tr>
              <td><%= key %></td>
              <td><%= value %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </p>
  </div>
</div>


<div class="mt-3">
  <%= link_to_index records_path %>
</div>