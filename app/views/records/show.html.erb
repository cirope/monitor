<div class="card">
  <div class="card-header">
    <h3 class="clearfix">
      <%= @record_class.model_name.human %>
    </h3>
  </div>

  <div class="card-body">
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'created_at'  %></strong>:
      <%= l @record.created_at, format: :compact %>
    </p>
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'user' %></strong>:
      <%= record_user_name @record %>
    </p>
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'data' %></strong>:
      <pre><%= JSON.pretty_generate(data_translate @record) %></pre>
    </p>
  </div>
</div>


<div class="mt-3">
  <%= link_to_index records_path %>
</div>