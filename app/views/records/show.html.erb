<div class="card">
  <div class="card-header">
    <h3 class="clearfix">
      <%= params[:kind] == 'login' ? 'Login' : 'Login fallido' %>
    </h3>
  </div>

  <div class="card-body">
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'created_at'  %></strong>:
      <%= l @record.created_at, format: :compact %>
    </p>
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'user' %></strong>:
      <%= user_name_of_record @record %>
    </p>
    <p class="mb-1">
      <strong><%= @record.class.human_attribute_name 'data' %></strong>:
      <pre><%= JSON.pretty_generate(@record.data).html_safe %></pre>
    </p>
  </div>
</div>


<div class="mt-3">
  <%= link_to_index records_path %>
</div>