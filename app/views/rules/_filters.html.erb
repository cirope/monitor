<div class="panel panel-default">
  <div class="panel-heading">
    <% if filters? %>
      <p class="text-warning pull-right">
        <span class="glyphicon glyphicon-filter"></span>
        <%= link_to rules_path, title: t('cancel') do %>
          <span class="glyphicon glyphicon-remove-circle"></span>
        <% end %>
      </p>
    <% end %>
    <h4 class="panel-title">
      <a href="#filters" data-toggle="collapse">
        <span class="glyphicon glyphicon-search"></span>
        <%= t 'filters.title' %>
        <span class="caret"></span>
      </a>
    </h4>
  </div>
  <div id="filters" class="panel-body collapse">
    <%= simple_form_for :filter, method: :get do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-lg-8">
            <%= f.input :name,
              required: false,
              input_html: {
                value:     filter_params[:name],
                class:     'input-sm',
                autofocus: true
              }
            %>
          </div>
          <div class="col-lg-4 bottom">
            <p class="text-right">
              <%= f.button :submit, t('filters.submit'), class: 'btn-sm btn-default' %>
              <%= link_to t('cancel'), rules_path, class: 'small' %>
            </p>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
