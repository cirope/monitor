<%= render 'filters' %>

<% if @scripts.empty? %>
  <%= render 'shared/empty_index', message: empty_message %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Script.human_attribute_name 'name' %></th>
        <th class="d-none d-md-table-cell"><%= Tag.model_name.human count: 0 %></th>
        <th colspan="3">
          <%= link_to_new new_script_path, class: 'btn btn-secondary btn-sm py-0 mr-n2 float-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @scripts.each do |script| %>
        <tr>
          <td>
            <%= imported_tag script %>
            <%= script.name %>
          </td>
          <td class="d-none d-md-table-cell"><%= tags script.tags %></td>
          <td><%= link_to_show script %></td>
          <% if script.can_be_edited_by? current_user %>
            <td><%= link_to_edit [:edit, script] %></td>
            <td><%= link_to_destroy script %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @scripts %>
<% end %>

<div class="btn-group">
  <%= link_to_new new_script_path, class: 'btn btn-primary' %>

  <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
  </button>

  <div class="dropdown-menu">
    <%= link_to t('.export'), scripts_exports_create_path, class: 'dropdown-item', data: { method: :post, toggle: 'dropdown' } %>
    <%= link_to t('.import'), scripts_imports_new_path, class: 'dropdown-item' %>
  </div>
</div>
