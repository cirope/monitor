<div class="card">
  <div class="card-header">
    <h3><%= @server %></h3>
  </div>

  <div class="card-body">
    <p class="mb-1">
      <strong><%= Server.human_attribute_name 'hostname' %></strong>:
      <%= @server.hostname %>
    </p>

    <% if @server.user.present? %>
      <p class="mb-1">
        <strong><%= Server.human_attribute_name 'user' %></strong>:
        <%= @server.user %>
      </p>
    <% end %>

    <% if @server.key.attached? %>
      <p class="mb-1">
        <strong><%= Server.human_attribute_name 'key' %></strong>:
        <%= link_to_unless current_user.supervisor?, t('messages.download'), rails_blob_path(@server.key, disposition: 'attachment') %>
      </p>
    <% end %>

    <p class="mb-3">
      <strong><%= Server.human_attribute_name 'default' %></strong>:
      <%= t @server.default ? 'yes' : 'no' %>
    </p>
  </div>
</div>

<%= link_to_edit [:edit, @server] %> |
<%= link_to_index servers_path %>
