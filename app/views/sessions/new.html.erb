<div class="row justify-content-center mt-5">
  <div class="col col-lg-4 col-md-6 col-sm-10">
    <div class="card bg-light">
      <div class="card-body">
        <%= form_tag sessions_path, novalidate: 'novalidate' do %>
          <div class="form-group">
            <%= label_tag :username, t('.username') %>
            <%= text_field_tag :username, params[:username], class: 'form-control', autofocus: true, autocomplete: 'off' %>
          </div>

          <div class="form-group">
            <%= label_tag :password, t('.password') %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>

          <div class="form-group form-check">
            <%= check_box_tag :remember_me, 1, params[:remember_me], class: 'form-check-input' %>
            <label class="form-check-label" for="remember_me"><%= t '.remember_me' %></label>
          </div>

          <div class="form-actions text-center">
            <%= submit_tag t('.log_in'), class: 'btn btn-primary px-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% unless ldap %>
  <div class="row justify-content-center">
    <div class="col col-lg-4 col-md-6 col-sm-10 text-center">
      <p class="mt-3">
        <%= link_to t('.forgot_password'), new_password_reset_path %>
      </p>
    </div>
  </div>
<% end %>
