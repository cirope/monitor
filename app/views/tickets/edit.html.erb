<div class="card">
  <div class="card-header">
    <h5><%= @title %></h5>
  </div>

  <div class="card-body">
    <%= render 'form' %>
  </div>
</div>

<div class="mt-3">
  <%= link_to_show [@owner, @issue, context: @context, filter: filter_query_hash] %> |

  <% if @issue.ticket? %>
    <%= link_to_index [@owner, :tickets, filter: filter_query_hash] %>
  <% else %>
    <% if @issue.script %>
      <%= link_to_index script_issues_path(@issue.script, filter: filter_query_hash) %>
    <% else %>
      <%= link_to_index issue_index_path(filter: filter_query_hash) %>
    <% end %>
  <% end %>
</div>
