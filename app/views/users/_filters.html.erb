<div class="card mb-3">
  <div class="card-header">
    <a class="dropdown-toggle text-reset" href="#filters" data-toggle="collapse">
      <%= icon 'fas', 'search' %>
      <%= t 'filters.title' %>
    </a>

    <% if filters? %>
      <p class="text-warning mb-0 float-right">
        <%= icon 'fas', 'filter' %>
        <%= link_to users_path, title: t('cancel') do %>
          <%= icon 'fas', 'times-circle' %>
        <% end %>
      </p>
    <% end %>
  </div>
  <div id="filters" class="card-body collapse">
    <%= simple_form_for :filter, method: :get do |f| %>
      <fieldset>
        <div class="row">
          <div class="col-lg-4">
            <%= f.input :name,
              required: false,
              input_html: {
                value:     filter_params[:name],
                class:     'form-control-sm',
                autofocus: true
              }
            %>
          </div>
          <div class="col-lg-4">
            <%= f.input :email,
              required: false,
              input_html: {
                value:     filter_params[:email],
                class:     'form-control-sm'
              }
            %>
          </div>
          <div class="col-lg-4">
            <%= f.input :tags,
              required: false, as: :autocomplete, url: tags_path(kind: 'user'),
              input_html: {
                value: filter_params[:tags],
                class: 'form-control-sm',
                data:  { empty_result_label: t('filters.tags.empty') }
              }
            %>
          </div>
        </div>

        <p class="text-right mb-0">
          <%= f.button :submit, t('filters.submit'), class: 'btn-sm btn-secondary' %>
          <%= link_to t('cancel'), users_path, class: 'small' %>
        </p>
      </fieldset>
    <% end %>
  </div>
</div>
