@font-face {
  font-family: 'Nunito';
  src: url('<%= font_path 'nunito/Nunito-Regular.eot' %>');
  src: local('Nunito Regular'), local('Nunito-Regular'), url('<%= font_path 'nunito/Nunito-Regular.eot?#iefix' %>') format('embedded-opentype'), url('<%= font_path 'nunito/Nunito-Regular.woff' %>') format('woff'), url('<%= font_path 'nunito/Nunito-Regular.ttf' %>') format('truetype'), url('<%= font_path 'nunito/Nunito-Regular.svg#Roboto' %>') format('svg');
  font-weight: 400;
  font-style: normal;
}

